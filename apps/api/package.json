{
  "name": "@apps/api",
  "module": "./src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --watch src/main.ts",
    "build": "tsc --build --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "bun run test",
    "test:coverage": "bun test --coverage --coverage-reporter=text",
    "typecheck": "bun x tsc --noEmit --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "drizzle:push": "bun x drizzle-kit push",
    "drizzle:generate": "bun x drizzle-kit generate",
    "drizzle:migrate": "bun x drizzle-kit migrate",
    "drizzle:generate&migrate": "bun x drizzle-kit generate & bun x drizzle-kit migrate",
    "drizzle:seed:location": "bun ./src/database/drizzle/seeds/location.ts",
    "drizzle:seed:superadmin-permissions": "bun ./src/database/drizzle/seeds/superadmin-permissions.ts",
    "drizzle:seed:setup-superadmin": "bun ./src/database/drizzle/seeds/setup-superadmin.ts",
    "drizzle:seed:dummy-data": "bun ./src/database/drizzle/seeds/dummy-companies-and-tickets.ts",
    "drizzle:seed:setup-superadmin-by-email": "bun ./src/database/drizzle/seeds/setup-superadmin-by-email.ts",
    "db:clean": "bun ./scripts/db-clean.ts",
    "db:seed": "bun ./scripts/db-seed.ts"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@intlify/hono": "^1.0.0",
    "@packages/domain": "workspace:*",
    "@packages/http-client": "workspace:*",
    "@packages/utils": "workspace:*",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.44.7",
    "eslint-plugin-unused-imports": "^4.3.0",
    "firebase-admin": "^13.6.0",
    "hono": "^4.10.4",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "resend": "^6.8.0",
    "testcontainers": "^11.8.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.50.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}

# API Configuration
NEXT_PUBLIC_API_BASE_URL #ex: http://localhost:3001
NEXT_PUBLIC_API_TIMEOUT #ex: 30000

# App Configuration
NEXT_PUBLIC_APP_NAME #ex: CondominioApp
NEXT_PUBLIC_APP_URL #ex: http://localhost:3000

# Firebase (Client) - These are safe to expose publicly
NEXT_PUBLIC_FIREBASE_API_KEY #ex: AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN #ex: your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID #ex: your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET #ex: your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID #ex: 123456789
NEXT_PUBLIC_FIREBASE_APP_ID #ex: 1:123456789:web:abc123

# Firebase Admin (Server-only) - Use ONE of the following options:
# Option 1 (Preferred for Vercel/production): Base64-encoded service account JSON
# Generate with: cat firebaseServiceAccountKey.json | base64 -w 0
FIREBASE_SERVICE_ACCOUNT_BASE64 #ex: eyJ0eXBlIjoic2VydmljZV9hY2NvdW50Ii...

# Option 2 (Fallback): Individual environment variables
# FIREBASE_ADMIN_PROJECT_ID #ex: your-project-id
# FIREBASE_ADMIN_CLIENT_EMAIL #ex: firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
# FIREBASE_ADMIN_PRIVATE_KEY #ex: -----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS #ex: false

# SEO Configuration
NEXT_PUBLIC_BASE_URL #ex: https://condominioapp.com
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION #ex: your-google-verification-code

import { frequencies, tiers } from './pricing-tiers'

// Icon component for checkmarks
function Icon({ className, icon, width }: { className?: string; icon: string; width: number }) {
  if (icon === 'ci:check') {
    return (
      <svg
        className={className}
        fill="none"
        height={width}
        stroke="currentColor"
        strokeLinecap="round"
        strokeLinejoin="round"
        strokeWidth={2}
        viewBox="0 0 24 24"
        width={width}
        xmlns="http://www.w3.org/2000/svg"
      >
        <polyline points="20 6 9 17 4 12" />
      </svg>
    )
  }
  return null
}

